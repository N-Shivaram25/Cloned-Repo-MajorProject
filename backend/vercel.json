{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "MONGO_URI": "",
    "STEAM_API_KEY": "",
    "STEAM_API_SECRET": "",
    "JWT_SECRET_KEY": "",
    "NODE_ENV": "production",
    "FRONTEND_URL": ""
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "dest": "/api/server.js" }
  ]
}
